{% extends 'master' %}{% block content %}
<div class="container">
  <div class="row">
    <div class="col s3"></div>
    <div class="col s12 m12 l6 card">
      <form class="col s12" role="form" method="POST" enctype="multipart/form-data" action="/cards/create">
        {{csrfField}}
        <div style="padding: 30px;padding-left:0;">
          <h4 style="border-left: 5px solid #ee6e73;padding-left: 1.5rem;color:#ee6e73;">Kép megosztása</h4>
          <div class="alert alert-success" role- "alert">
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="description" type="text" class="validate" name="description" required>
              <label for="description">Leírás</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <select id="category_name" name="category_name">
                              <option value="" disabled selected>Válassz kategóriát</option>
                               {% for category in categories %}
                                <option value="{{category.name}}">{{category.name}}</option>
                               {% endfor %}
                            </select>
              <label>Kategória</label>
            </div>
          </div>

          <div class="row">
            <div class="file-field input-field">
              <div class="btn grey">
                <span>Kép</span>
                <input type="file" name="file" id="file" required>
              </div>
              <div class="file-path-wrapper">
                <input class="file-path validate" type="text">
              </div>
            </div>
          </div>

          <div class="row hide">
            <div class="input-field col s12">
              <input id="user_name" type="text" class="validate" name="user_name"  value="{{currentUser.username}}">
            </div>
          </div>

          <div class="row hide">
            <div class="input-field col s12">
              <input id="avatar_url" type="text" class="validate" name="avatar_url"  value="{{currentUser.avatarURL}}">
            </div>
          </div>

          <center>
            <button class="waves-effect waves-light btn-large pink" id="submit">Feltöltés</button>
          </center>
        </div>
      </form>
    </div>
  </div>
</div>
{% endblock %}
