{% extends 'master' %}{% block content %}
<div class="container">
  <div class="row">
    <div class="col s4"></div>
    <div class="col s12 m12 l4 card">
      <form class="col s12" role="form" method="POST" action="/login">
        <div style="padding: 30px;padding-left:0;">
          <h4 style="border-left: 5px solid #ee6e73;padding-left: 1rem;color:#ee6e73;">Bejelentkezés</h4>
           {{ csrfField }}
          <div class="row">
            <div class="input-field col s12">
              <input id="email" type="email" class="validate" name="email" required>
              <label for="email">Email</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="password" type="password" class="validate" name="password" required>
              <label for="password">Jelszó</label>
            </div>
          </div>
          <center><button class="waves-effect waves-light btn-large pink" id='submit'>Belépek</button></center>
        </div>
      </form>
    </div>
  </div>
</div>
{% endblock %}
